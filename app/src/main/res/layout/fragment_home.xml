<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <Button
        android:id="@+id/home_join"
        android:layout_width="160dp"
        android:layout_height="94dp"
        android:layout_marginStart="123dp"
        android:layout_marginTop="161dp"
        android:layout_marginEnd="123dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/open_sans"
        android:text="Join Session"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/home_records"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.631" />

    <Button
        android:id="@+id/home_records"
        android:layout_width="160dp"
        android:layout_height="94dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/open_sans"
        android:text="My Records"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/home_learning"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/home_learning"
        android:layout_width="160dp"
        android:layout_height="94dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/open_sans"
        android:text="Self-learning"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>