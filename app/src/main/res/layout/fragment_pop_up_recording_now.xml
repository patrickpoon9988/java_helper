<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/record_end"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="52.5dp"
        android:background="@drawable/upload"
        android:src="@drawable/rectangle_recording"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Chronometer
        android:id="@+id/chronometer_timer"
        android:layout_width="60dp"
        android:layout_height="19dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/open_sans_bold"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/record_end"
        app:layout_constraintStart_toStartOf="@+id/record_end" />

</androidx.constraintlayout.widget.ConstraintLayout>